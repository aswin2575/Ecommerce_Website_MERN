<section>
    <div class="container">
        <div class="row mt-4 ">
            <div class="col text-end">
            <a href="/admin/add-product" style="width:auto;" class="btn btn-success ml-auto">Add Product</a>
            </div>
        </div>
        <table class="table mt-2">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{ @index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="height: 50px;width : 50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Name}}')"> Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>